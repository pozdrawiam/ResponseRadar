@page "{id:int}"
@using Rr.Core.Data
@model Rr.Web.Pages.HttpMonitors.EditModel

@{
    ViewData["Title"] = "Edit Http monitor";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" asp-for="HttpMonitor!.Id"/>

    <div asp-validation-summary="ModelOnly" class="mb-3 text-danger"></div>

    <div class="mb-3">
        <label for="@nameof(HttpMonitor.Name)" class="form-label">Name</label>
        <input asp-for="HttpMonitor!.Name" id="@nameof(HttpMonitor.Name)" type="text" class="form-control"/>
        <span asp-validation-for="HttpMonitor!.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <div class="form-check form-switch">
            <input asp-for="HttpMonitor!.IsEnabled" id="@nameof(HttpMonitor.IsEnabled)" class="form-check-input" type="checkbox" role="switch">
            <label class="form-check-label" for="@nameof(HttpMonitor.IsEnabled)">Is enabled</label>
        </div>
    </div>
    <div class="mb-3">
        <label for="@nameof(HttpMonitor.Url)" class="form-label">URL</label>
        <input asp-for="HttpMonitor!.Url" id="@nameof(HttpMonitor.Url)" type="text" class="form-control"/>
        <span asp-validation-for="HttpMonitor!.Url" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="@nameof(HttpMonitor.TimeoutMs)" class="form-label">Timeout (ms)</label>
        <input asp-for="HttpMonitor!.TimeoutMs" id="@nameof(HttpMonitor.TimeoutMs)" type="number" class="form-control"/>
        <span asp-validation-for="HttpMonitor!.TimeoutMs" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="@nameof(HttpMonitor.ContentContains)" class="form-label">Content contains</label>
        <input asp-for="HttpMonitor!.ContentContains" id="@nameof(HttpMonitor.ContentContains)" type="text" class="form-control"/>
        <span asp-validation-for="HttpMonitor!.ContentContains" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="@nameof(HttpMonitor.ContentNotContains)" class="form-label">Content not contains</label>
        <input asp-for="HttpMonitor!.ContentNotContains" id="@nameof(HttpMonitor.ContentNotContains)" type="text" class="form-control"/>
        <span asp-validation-for="HttpMonitor!.ContentNotContains" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
